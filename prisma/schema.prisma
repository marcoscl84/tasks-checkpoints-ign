// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// model é usado como nome genérico para qualquer banco que for utilizado
model Habit {
  id         String          @id @default(uuid())
  title      String
  created_at DateTime
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day String

  habit   Habit  @relation(fields: [habit_id], references: [id])
  habitId String

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime // 2023-01-16T00:00:00.0z
  dayHabits DayHabit[]

  @@unique([date])
  @@map("day")
}

model DayHabit {
  id String @id @default(uuid())

  day_Id   String
  habit_Id String

  day   Day   @relation(fields: [day_Id], references: [id])
  habit Habit @relation(fields: [habit_Id], references: [id])

  @@unique([day_Id, habit_Id])
  @@map("day_habit")
}
